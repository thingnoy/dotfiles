{{- if (eq .chezmoi.os "darwin") -}}
#!/bin/sh

# Install common macOS packages

source /tmp/chezmoi-utils.sh

printf "${green}[10 - macOS] ${reset}"
{{- if or (lt 10 (atoi (env "SCRIPTS_START_AT"))) (env "SKIP_BREW") }}
echo "Skip installing common macOS packages"
exit 0
{{ else }}
echo "Install common macOS packages"
{{- end }}

set -eufo pipefail

{{ $taps := list
  "homebrew/cask"
  "homebrew/cask-fonts"
  "koekeishiya/formulae"
-}}

{{ $brews := list
  "git"
  "bat" # a cat clone with syntax highlighting and Git integration.
  "tree"
  "zsh"
  "chezmoi"
  
  "yabai" # tiling window manager
  "skhd" # simple hotkey daemon for macOS

  "htop" # interactive process viewer
  "fd" # a simple, fast and user-friendly alternative to find
  "dust" # a more intuitive version of du in rust
  "ripgrep" # recursively searches directories for a regex pattern
  "prettyping" # a wrapper around the standard ping tool with the objective of making the output prettier, more colorful, more compact, and easier to read
  "nvim" # a hyperextensible Vim-based text editor

  "exa" # a modern replacement for ls
  "fzy" # fast, simple fuzzy text selector for the terminal
  "zoxide" # smarter cd command
-}}

{{ $casks := list
  "font-hack-nerd-font"
  "font-meslo-lg-nerd-font"
  "font-fira-code-nerd-font"
  "font-jetbrains-mono-nerd-font"
-}}

brew bundle --no-lock --file=/dev/stdin <<EOF || :
{{ range ($taps | sortAlpha | uniq) -}}
tap "{{ . }}"
{{ end }}
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end }}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end }}
EOF

echo "Start services..."

{{ end -}}
