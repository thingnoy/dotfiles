{{- if (eq .chezmoi.os "darwin") -}}
#!/bin/sh

# Install common macOS packages

source /tmp/chezmoi-utils.sh

printf "${green}[10 - macOS] ${reset}"
{{- if or (lt 10 (atoi (env "SCRIPTS_START_AT"))) (env "SKIP_BREW") }}
echo "Skip installing common macOS packages"
exit 0
{{ else }}
echo "Install common macOS packages"
{{- end }}

set -eufo pipefail

{{ $taps := list
  "homebrew/cask"
  "homebrew/cask-fonts"
  "mac-cleanup/mac-cleanup-py"
  "koekeishiya/formulae"
-}}

{{ $brews := list
  "git"
# bat is a dependency of exa
  "bat"
  "tree"
  "zsh"
  "chezmoi"
  "yabai"
  "skhd"
  "htop"
  "fd"
  "dust"
  "ripgrep"
  "prettyping"
  "nvim"
  "exa"
  # fzy is a dependency of zoxide
  "fzy"
  "fzf"
  "zoxide"
  "asdf"
  "gpg"
  "mac-cleanup-py"
  "zsh-syntax-highlighting"
  "zsh-history-substring-search"
  "zsh-autosuggestions"
-}}

{{ $casks := list
  "font-hack-nerd-font"
  "font-meslo-lg-nerd-font"
  "font-fira-code-nerd-font"
  "font-jetbrains-mono-nerd-font"
-}}

brew bundle --no-lock --file=/dev/stdin <<EOF || :
{{ range ($taps | sortAlpha | uniq) -}}
tap "{{ . }}"
{{ end }}
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end }}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end }}
EOF

echo "Start services..."

{{ end -}}
